---
interface Props {
	title: string
	description: string
	srcImage: string
	altImage: string
}

const { title, description, srcImage, altImage } = Astro.props
---

<div
	class="group relative bg-gray-50 transition hover:z-[1] hover:bg-white hover:shadow-2xl hover:shadow-gray-600/10 dark:bg-gray-900 dark:hover:bg-gray-800"
>
	<div class="relative space-y-8 p-8 py-12 transition duration-300">
		<img src={srcImage} class="w-12" width="512" height="512" alt={altImage} />
		<div class="space-y-2">
			<h5
				class="text-xl font-semibold text-gray-700 transition group-hover:text-primary dark:text-white"
			>
				{title}
			</h5>
			<p class="text-gray-600 dark:text-gray-300">
				{description}
			</p>
		</div>
	</div>
</div>
